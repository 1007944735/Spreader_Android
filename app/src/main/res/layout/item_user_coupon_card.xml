<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_coupon"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_8"
        android:paddingTop="@dimen/padding_8"
        android:paddingRight="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/discountRule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF5001"
                android:textSize="@dimen/dimen_18"
                tools:text="21123132" />

            <LinearLayout
                android:id="@+id/useRule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_10"
                tools:text="2019-4-18 00:00:00~2019-4-18 00:00:00" />
        </LinearLayout>

        <Button
            android:id="@+id/used"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:text="去使用"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_coupon_right_use"/>
    </LinearLayout>
</RelativeLayout>