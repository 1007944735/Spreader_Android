<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTheme"
            app:layout_collapseMode="parallax"
            app:layout_scrollFlags="scroll|enterAlways">

            <TextView
                style="@style/HeaderViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="首页" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg_radius_white">

            </com.youth.banner.Banner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6"
                android:layout_marginRight="@dimen/margin_6"
                android:background="@drawable/bg_radius_white"
                android:orientation="vertical"
                android:padding="@dimen/padding_6"
                android:translationY="-10dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_18">

                    <TableRow
                        android:layout_marginBottom="1dp"
                        android:background="@color/white">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/business_0"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="3"
                            android:background="#4c9dec"
                            android:foreground="@drawable/fg_ripple_general">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="商家"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/business_1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="2"
                            android:background="#4fa7ee"
                            android:foreground="@drawable/fg_ripple_general">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="发布"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/business_2"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="2"
                            android:background="#52b2ee"
                            android:foreground="@drawable/fg_ripple_general">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="暂无"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/business_3"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="2"
                            android:background="#53bcec"
                            android:foreground="@drawable/fg_ripple_general"
                            tools:layout_editor_absoluteX="302dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="暂无"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>
                    </TableRow>

                    <TableRow>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/personal_0"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="3"
                            android:background="#47c88f"
                            android:foreground="@drawable/fg_ripple_general">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="个人"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/personal_1"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="2"
                            android:background="#52CC7F"
                            android:foreground="@drawable/fg_ripple_general">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="红包"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/personal_2"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="1dp"
                            android:layout_weight="2"
                            android:background="#60D06C"
                            android:foreground="@drawable/fg_ripple_general">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="优惠"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/personal_3"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="2"
                            android:background="#62D168"
                            android:foreground="@drawable/fg_ripple_general">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="活动"
                                android:textColor="@color/white"
                                android:textSize="@dimen/dimen_18"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="暂无"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="暂无"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="暂无"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="暂无"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_6"
                android:layout_marginRight="@dimen/margin_6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="#000fff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="#ff0000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="#000fff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="#ff0000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="#000fff" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>