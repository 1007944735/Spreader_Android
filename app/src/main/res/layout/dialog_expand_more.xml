<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radius_white_top"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_10"
    android:paddingBottom="@dimen/padding_10">
    <TextView
        android:layout_width="40dp"
        android:layout_height="6dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog_expand_top" />
    <LinearLayout
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/fg_ripple_general"
        android:orientation="horizontal"
        android:padding="@dimen/padding_14"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/margin_10"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_dialog_expand_more_picture" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/history_release_picture"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_18" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorHintText"/>

    <LinearLayout
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/fg_ripple_general"
        android:orientation="horizontal"
        android:padding="@dimen/padding_14"
        android:gravity="center">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/margin_10"
            android:scaleType="fitCenter"
            android:src="@mipmap/icon_dialog_expand_more_video" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/history_release_video"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/dimen_18" />
    </LinearLayout>
</LinearLayout>