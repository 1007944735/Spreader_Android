<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@drawable/bg_border_white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_red_packet_number"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />

            <EditText
                android:id="@+id/count"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="4"
                android:gravity="right"
                android:hint="@string/home_hint_red_packet_number"
                android:inputType="number"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_unit_pieces"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@drawable/bg_border_white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_single_money"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />

            <EditText
                android:id="@+id/price"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="4"
                android:gravity="right"
                android:hint="@string/home_hint_total_money"
                android:inputType="number"
                android:textColor="@color/colorBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_unit_yuan"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@drawable/bg_border_white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_start_time"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/home_hint_time"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:background="@drawable/bg_border_white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_end_time"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/home_hint_time"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/release_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_white"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/home_release_address"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="@string/home_hint_address"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_8"
            android:text="@string/home_expand_tip" />

        <LinearLayout
            android:id="@+id/expand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border_white"
            android:foreground="@drawable/fg_ripple_general"
            android:orientation="horizontal"
            android:padding="@dimen/padding_14">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/margin_4"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_home_expand" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/home_expand_add_tip"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dimen_18" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_24"
                android:src="@mipmap/icon_right" />

        </LinearLayout>

        <Button
            android:id="@+id/submit"
            style="@style/ConfirmButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_marginEnd="@dimen/margin_10"
            android:text="@string/home_put_money" />
    </LinearLayout>
</ScrollView>