<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/cancel"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_toLeftOf="@+id/capture"
        android:layout_marginRight="50dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_camera_cancel"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/capture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bg_camera_capture"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_camera_capture" />

    <ImageButton
        android:id="@+id/confirm"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_toRightOf="@+id/capture"
        android:layout_marginLeft="50dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_camera_confirm"
        android:background="@android:color/transparent"
        android:visibility="gone" />
</RelativeLayout>